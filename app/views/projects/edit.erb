<% if logged_in? %>
    <%= @error %>

    <h1>Edit Project</h1>

        <form action='/projects/<%= @project.id %>' method='post'>
        <input type='hidden' name='_method' value='patch'>

            Project Name: <input type='text' name='project_name' value='<%= @project.project_name %>'>
            <br>
            <br>
            Project Status: <input type='text' name='project_status' value='<%= @project.project_status %>'>

            <input type='submit' value='submit'>

        </form>

<% else %>

    <h1>You must be logged in to edit a project.</h1> 

<% end %>

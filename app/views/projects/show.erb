    <% if @project.user == current_user %>

        <h2><%= current_user.username %> Project</h2>

    <% else %>

        <h2><%= @project.user.username %> Project</h2>

    <% end %>
    <br> 
    
        <h4>Project Name:</h4>

            <%= @project.project_name %>
            <br>
            <br>
            <h4>Description:</h4>
            
            <%= @project.description %>
            <br>
            <br>
            <h4>Subcontractors:</h4>

            <%= @project.subs %>
            <br>
            <br>
            <h4>Total Cost:</h4>

            <%= @project.total_cost %>
            <br>
            <br>
            <h4>Subcontractor Cost:</h4>

            <%= @project.sub_cost %>
            <br>
            <br>
            <h4>Status:</h4>
            
            <%= @project.project_status %>
            <br>
            <br>
            <h4>Billing Status: </h4>

            <%= @project.billing_status %>
            <br>
            <br>

    <% if @project.user == current_user %>     

        <form action="/projects/<%= @project.id %>/edit" method="/projects/<%= @project.id %>/edit">
            <input class="btn btn-primary" type="submit" value="Edit Project"> 
        </form>        
        <br>

        <form action="/projects/<%= @project.id %>/delete" method="post">
            <input type="hidden" name="_method" value="delete">
            <input type="submit" value="Delete Project">
        </form>
        <br>

    <% end %> 

    <form action="/projects" method="projects">
        <input class="btn btn-primary" type="submit" value="Return to Projects">
    </form>
    <br> 

    <form action="/logout" method="post">
        <input class="btn btn-primary" type="submit" value="Log Out"> 
    </form>
    <br>

    <p><font color="blue">Current User: <%= current_user.username %></font></p>
    
    
     

     
     

